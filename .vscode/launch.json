    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug strapi",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/projects/bp-strapi/**/*.js",
            ],
            "cwd": "${workspaceFolder}/projects/bp-strapi",
            "runtimeArgs": [
                "--inspect"
            ],
            "envFile": "${workspaceFolder}/projects/bp-strapi/config/env/development/.env",
            "program": "debug.js",
            "autoAttachChildProcesses": true
        }
    ]
}