{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext",
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "src",
  ]
}